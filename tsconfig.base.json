{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": { "files": true },
  "include": ["packages/**/*"]
}
